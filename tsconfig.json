{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",              // ðŸ‘ˆ change here
    "moduleResolution": "NodeNext",    // ðŸ‘ˆ must match
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
